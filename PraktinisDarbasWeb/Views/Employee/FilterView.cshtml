<div class="container">
    <div class="row">
        <div class="col-sm-4"> </div>
         <div class="modal-dialog">
             <div class="modal-content">
                 <div class="modal-header">
                     <h4 class="modal-title" id="myModal-label">Filter options</h4>
                 </div>
                 <div class="modal-body">
                     @using (Html.BeginForm("Index", "Employee"))
                     {
                         <div class="form-group">
                             All Employees @Html.RadioButton("EmployeeFilter", "All")
                         </div>
                         <div class="form-group">

                             Active employees @Html.RadioButton("EmployeeFilter", "Active")
                         </div>
                         <div class="form-group">
                             Inactive employees @Html.RadioButton("EmployeeFilter", "Inactive")
                         </div>
                         <input type="submit" value="Filter" data-dismiss="modal" />
                     }
                 </div>
             </div>
        </div>
    </div>
</div>
